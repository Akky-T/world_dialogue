<%= render "shared/second-header"%>

<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Nickname</label>
      <span class="indispensable">necessary</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"ex. Tom ", maxlength:"40" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="weight-bold-text">
    Gender
    <span class="indispensable">necessary</span>
  </div>
  <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"user-gender"}) %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Age</label>
      <span class="indispensable">necessary</span>
    </div>
    <%= f.text_area :user_age, class:"input-default", id:"user_age", placeholder:"26", maxlength:"3" %>
  </div>

  <div class="weight-bold-text">
    Nationality
    <span class="indispensable">necessary</span>
  </div>
  <%= f.collection_select(:nationality_id, Nationality.all, :id, :name, {}, {class:"select-box", id:"user-nationality"}) %>

  <div class="weight-bold-text">
    Occupation
    <span class="indispensable">necessary</span>
  </div>
  <%= f.collection_select(:occupation_id, Occupation.all, :id, :name, {}, {class:"select-box", id:"user-occupation"}) %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
